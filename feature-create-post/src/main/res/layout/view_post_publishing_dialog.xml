<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp"
    android:elevation="5dp">
    <TextView
        style="@style/TextView.SemiBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Информация о публикации"
        android:textColor="@color/dark"
        android:textSize="22sp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            style="@style/TextView.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Количество медиа:"
            android:textColor="@color/dark"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/tv_media_count"

            style="@style/TextView.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textColor="@color/primary"
            android:textSize="18sp"/>
    </LinearLayout>
    <TextView
        style="@style/TextView.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Текст:"
        android:textColor="@color/dark"
        android:textSize="18sp"/>
    <EditText
        android:id="@+id/editText"


        style="@style/TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center"
        android:maxHeight="100dp"
        android:inputType="textMultiLine"
        android:hint="Пост без текста"
        android:paddingBottom="3dp"
        android:clickable="false"
        android:focusable="false"

        android:scrollbars="vertical"
        android:textColor="@color/dark"
        android:textSize="16sp"/>
    <TextView
        style="@style/TextView.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Площадки:"
        android:textColor="@color/dark"
        android:textSize="18sp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_places"

        android:layout_width="match_parent"
        android:layout_height="200dp"
        tools:listitem="@layout/item_rv_post_place"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />
    <LinearLayout
        android:id="@+id/layout_corrections"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_btns"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        >
        <Button
            android:id="@+id/btn_cancel"

            style="@style/BtnError"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Отмена"
            android:layout_marginEnd="5dp"
            />
        <Button
            android:id="@+id/btn_continue"

            style="@style/BtnPrimary"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Продолжить"
            android:layout_marginStart="5dp"
            />
    </LinearLayout>



</LinearLayout>