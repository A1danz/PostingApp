<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/all_sections"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:paddingVertical="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:divider="@drawable/social_media_settings_divider"
        android:showDividers="middle"
        >
        <LinearLayout
            android:id="@+id/vk_section"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_vk_title"

                style="@style/TextView.SemiBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Вконтакте"
                android:textSize="26sp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/dark"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_vk_authorized"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_vk_image"

                    app:shapeAppearanceOverlay="@style/roundedImageView"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/default_vk_img"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:background="@drawable/rounded_iv_background"
                    android:outlineProvider="background"
                    />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_vk_data"


                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_vk_image"
                    app:layout_constraintEnd_toStartOf="@id/btn_vk_settings"
                    android:layout_marginStart="10dp"
                    android:gravity="top"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_vk_user_name"

                        style="@style/TextView.SemiBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/tv_vk_link_groups"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintVertical_bias="0.0"
                        android:text=""
                        android:textColor="@color/dark"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/tv_vk_linked_title"

                        style="@style/TextView.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv_vk_user_name"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="@string/linked_groups"
                        android:textColor="@color/dark"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/tv_vk_link_groups"

                        style="@style/TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv_vk_linked_title"
                        app:layout_constraintStart_toStartOf="@id/tv_vk_linked_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:text=""
                        android:textColor="@color/primary"
                        android:textSize="16sp" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:id="@+id/tv_vk_please_do_ouath"

                    style="@style/TextView.SemiBold"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/iv_vk_image"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btn_vk_settings"
                    android:text="Учетная запись не привязана :("
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textColor="@color/dark"
                    />

                <ImageView
                    android:id="@+id/btn_vk_settings"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/rounded_settings"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:elevation="1dp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tg_section"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_tg_title"

                style="@style/TextView.SemiBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telegram"
                android:textSize="26sp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/dark"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_tg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_tg_image"

                    app:shapeAppearanceOverlay="@style/roundedImageView"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/default_tg_image"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_tg_data"

                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_tg_image"
                    app:layout_constraintEnd_toStartOf="@id/btn_tg_settings"
                    android:layout_marginStart="10dp"
                    android:gravity="top"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_tg_user_name"

                        style="@style/TextView.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/tv_tg_link_groups"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="\@Aidanusg"
                        app:layout_constraintVertical_bias="0.0"
                        android:textColor="@color/dark"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/tv_tg_linked_title"

                        style="@style/TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv_tg_user_name"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/tv_tg_link_groups"
                        android:text="Связанные группы: "
                        android:textColor="@color/dark"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tv_tg_link_groups"

                        style="@style/TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Мемы 11В, Telegram channel #1, Telegram channel $2, TElegram channel $3"
                        android:textColor="@color/primary"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/tv_tg_linked_title"
                        app:layout_constraintTop_toBottomOf="@id/tv_tg_linked_title"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:id="@+id/tv_tg_please_do_ouath"

                    android:visibility="gone"
                    style="@style/TextView.SemiBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/iv_tg_image"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btn_tg_settings"
                    android:text="Учетная запись не привязана :("
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textColor="@color/dark"
                    />
                <ImageView
                    android:id="@+id/btn_tg_settings"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/rounded_settings"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:elevation="1dp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>