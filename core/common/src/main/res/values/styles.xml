<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextView.Medium" parent="TextView">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextView.SemiBold" parent="TextView">
        <item name="android:fontFamily">@font/rubik_semibold</item>
    </style>

    <style name="TextView.Bold" parent="TextView">
        <item name="android:fontFamily">@font/rubik_bold</item>
    </style>
    <style name="AuthInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextAppearance">@style/HintTextAppearance</item>
    </style>

    <style name="AuthEditText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="fontFamily">@font/rubik_regular</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HintTextAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/text_input_layout_hint_selector</item>
    </style>

    <style name="AuthMoveBtn" parent="Widget.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="AuthCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:colorControlNormal">@color/gray</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:buttonTint">@color/gray</item>
    </style>

    <style name="BtnPrimary" parent="Widget.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="BtnError" parent="BtnPrimary">
        <item name="android:backgroundTint">@color/error</item>
    </style>

    <style name="VkConnectBtn" parent="BtnPrimary">
        <item name="android:backgroundTint">@color/vk_color</item>
    </style>

    <style name="AuthHeader" parent="TextView.Bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/hello_its_posting</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AuthDescription" parent="TextView.Medium">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">20sp</item>
        <item name="android:text">@string/type_your_data</item>
    </style>

    <style name="AuthErrorText" parent="TextView">
        <item name="android:textColor">@color/error</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/rubik_medium</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_shape</item>
    </style>

    <style name="roundedImageViewOverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="roundedImageView5" parent="roundedImageView">
        <item name="cornerSize">5dp</item>
    </style>

    <style name="roundedImageView20" parent="roundedImageView">
        <item name="cornerSize">50dp</item>
    </style>
</resources>